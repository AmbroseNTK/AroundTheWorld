<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_earth"
            android:adjustViewBounds="false"

            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTitle"
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/text_around_the_world" />


            <ImageButton
                android:id="@+id/btStart"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:layout_below="@id/imgTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/bntplay"
                android:text="@string/menu_button_play" />

            <ImageButton
                android:id="@+id/btSetting"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:layout_below="@id/btStart"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bntmode"
                android:text="@string/menu_button_exit" />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_above="@+id/btSignIn"
                android:text="Hello! Everybody"
                android:textColor="@color/textXanh"/>
            <com.google.android.gms.common.SignInButton
                android:id="@+id/btSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
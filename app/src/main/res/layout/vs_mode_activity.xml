<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VsModeStartActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_span="2"
                android:text="Player Vs Player Mode"
                android:textAlignment="center"
                android:textColor="@color/textXanh"
                android:textSize="15pt"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvPlayerName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text="Player 1"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="10pt"
                android:background="#d63031"/>

            <TextView
                android:id="@+id/tvPlayerName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text="Player 2"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="10pt"
                android:background="#0984e3"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/etName1"
                android:layout_span="1"
                android:background="#d63031"
                android:hint="Player 1's Name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:inputType="text"/>
            <EditText
                android:id="@+id/etName2"
                android:layout_span="1"
                android:background="#0984e3"
                android:hint="Player 2's Name"
                android:textColor="#fff"
                android:textAlignment="center"
                android:inputType="text"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Round Time (minutes)"
        android:textSize="10pt"
        android:textAlignment="center"
        android:layout_span="2"
        android:layout_marginTop="10dp"
        />
    <NumberPicker
        android:id="@+id/pickerTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </NumberPicker>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPlay"
        android:text="Start"
        android:background="@color/textXanh"
        android:textColor="#fff"/>
</LinearLayout>

</android.support.constraint.ConstraintLayout>